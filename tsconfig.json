{
  "extends": "@fullstacksjs/tsconfig/esm",
  "compilerOptions": {
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["DOM", "ESNext"],
    "outDir": "./dist",
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
